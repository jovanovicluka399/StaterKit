{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@component/*": ["Components/views/*"],
      "@common/*": ["Components/Common/*"],
      "@assets/*": ["Components/assets/*"],
      "@shared/*": ["app/_shared/*"],
      "@helpers/*": ["helpers/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "Components/Game/Play/Play.js",
    "Components/Game/Pause/Pause.js",
    "Components/Game/Mark/Mark.js",
    "pages/admin/WelcomeBanner/WelcomeBanner.js"
  ],
  "exclude": ["node_modules"]
}
